This is a example request (a bit formated for better readability):

POST /xmlrpc.php HTTP/1.0.
Host: springfiles.com.
User-Agent: xmlrpclib.py/1.0.1 (by www.pythonware.com).
Content-Type: text/xml.
Content-Length: 406.

<?xml version='1.0'?>
<methodCall>
	<methodName>springfiles.search</methodName>
	<params>
	<param><value><struct>
		<member>
			<name>springname</name>
			<value><string>Tabula-V2</string></value>
		</member>
		<member>
			<name>logical</name>
			<value><string>or</string></value>
		</member>
		<member>
			<name>filename</name>
			<value><string>Tabula-V2</string></value>
		</member>
	</struct></value></param>
	</params>
</methodCall>

